<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digi.garagedoor"
    android:versionCode="101200"
    android:versionName="1.0.1" >

    <uses-sdk android:minSdkVersion="9"
              android:targetSdkVersion="15"/>

	<uses-permission
		android:name="android.permission.INTERNET" />
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/door"
		android:label="@string/app_name"
		android:theme="@style/AppThemeSelector"
		android:name=".App"
		android:alwaysRetainTaskState="true"
		android:debuggable="false">
        <activity
			android:name=".IDigiLoginActivity"
			android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceSelectionActivity"
			android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".XBeeSelectionActivity"
			android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".GarageDoorActivity"
			android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".AboutActivity"
			android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
    </application>
</manifest>